generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
 
}
model User {
  id                String    @id @default(uuid())
  email             String    @unique
  passwordHash      String
  isVerified        Boolean   @default(false)
  verificationToken String?
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  profile           UserProfile?
  refreshTokens     RefreshToken[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model UserProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  displayName String
  avatarUrl   String?
  bio         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  decks       Deck[]
  studyStats  StudyStats[]
}

model Deck {
  id          String   @id @default(uuid())
  profileId   String
  profile     UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  title       String
  description String?
  tags        String[]    // For searchability
  isPublic    Boolean     @default(false)
  isOrphaned  Boolean     @default(false)  // Unsaved AI-generated decks
  viewCount   Int         @default(0)
  copyCount   Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  cards       Flashcard[]
  
  @@index([profileId])
  @@index([isPublic, createdAt])
  @@index([tags])
}

model Flashcard {
  id        String   @id @default(uuid())
  deckId    String
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
  front     String   // Question/Term
  back      String   // Answer/Definition
  hint      String?  // Optional hint
  order     Int      // Position in deck
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  cardProgress CardProgress[]
  
  @@index([deckId])
}

// Spaced Repetition Progress - per user per card
model CardProgress {
  id              String   @id @default(uuid())
  flashcardId     String
  flashcard       Flashcard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)
  profileId       String   // Links to UserProfile for study progress
  
  // SM-2 Algorithm fields
  easeFactor      Float    @default(2.5)  // Difficulty multiplier (1.3 - 2.5)
  interval        Int      @default(0)    // Days until next review
  repetitions     Int      @default(0)    // Successful reviews in a row
  nextReviewDate  DateTime @default(now())
  lastReviewDate  DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([flashcardId, profileId])
  @@index([profileId, nextReviewDate])
}

model StudyStats {
  id            String   @id @default(uuid())
  profileId     String
  profile       UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  date          DateTime @db.Date
  cardsStudied  Int      @default(0)
  correctCount  Int      @default(0)
  studyTimeMs   Int      @default(0)
  
  @@unique([profileId, date])
}

// For tracking AI generation requests (rate limiting + analytics)
model AIGenerationLog {
  id        String   @id @default(uuid())
  userId    String
  prompt    String
  tokensUsed Int
  createdAt DateTime @default(now())
  
  @@index([userId, createdAt])
}